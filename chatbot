<body>

<div class="chat-container">
  <div class="chat-header">VASO Beauty Bot</div>
  <div class="chat-box" id="chat-box">
    <div class="message bot">Hi there! ðŸ‘‹ I'm your VASO Beauty Assistant. Ask me about skincare products or what suits your skin best!</div>
  </div>
  <div class="chat-input">
    <input type="text" id="user-input" placeholder="Type your message...">
    <button onclick="sendMessage()">Send</button>
  </div>
</div>

<script>
  const chatBox = document.getElementById('chat-box');

  function sendMessage() {
    const input = document.getElementById('user-input');
    const message = input.value.trim();
    if (message === "") return;

    addMessage("user", message);
    respondToMessage(message.toLowerCase());
    input.value = "";
  }

  function addMessage(sender, text) {
    const msg = document.createElement('div');
    msg.className = `message ${sender}`;
    msg.textContent = text;
    chatBox.appendChild(msg);
    chatBox.scrollTop = chatBox.scrollHeight;
  }

  function respondToMessage(msg) {
    let response = "";

    if (msg.includes("hi") || msg.includes("hello")) {
      response = "Hello gorgeous! ðŸ’– What can I help you find today? Skincare? Brightening? Sun protection?";
    } else if (msg.includes("recommend") || msg.includes("suggest")) {
      response = "Tell me what you're looking for! Moisturizing, brightening, exfoliating, or sun protection?";
    } else if (msg.includes("scrub")) {
      response = "Try our *VASO Face and Body Scrub* â€“ exfoliates and refreshes your skin âœ¨.";
    } else if (msg.includes("moisturizer") || msg.includes("dry") || msg.includes("body lotion")) {
      response = "Our *VASO Body Lotion* is perfect for moisturizing and giving your skin a natural glow! ðŸ’§";
    } else if (msg.includes("whitening") || msg.includes("brighten") || msg.includes("lightening")) {
      response = "We have *VASO Skin Whitening Cream* and *Lotion* â€“ designed to reduce dark spots and brighten your tone ðŸŒŸ.";
    } else if (msg.includes("sun") || msg.includes("sunscreen")) {
      response = "Protect your skin with our *VASO Sunscreen Cream & Lotion*, enriched with vitamins â˜€ï¸.";
    } else if (msg.includes("facewash") || msg.includes("clean")) {
      response = "Our *VASO Facewash* deeply cleanses and refreshes your skin with fruity extracts ðŸ“.";
    } else if (msg.includes("thank")) {
      response = "You're always welcome! Let me know if you want more product tips ðŸ’•";
    } else {
      response = "Hmm... I didn't catch that! Could you ask about skincare, brightening, or sunscreen again?";
    }

    setTimeout(() => addMessage("bot", response), 600);
  }
</script>

